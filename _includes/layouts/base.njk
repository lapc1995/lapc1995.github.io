<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link rel="stylesheet" href="https://use.typekit.net/obr4hcx.css">
  </head>
  <body>
    <header>
      <h1 style="display: inline-block; margin-left: 0; border-style: none;">{{ metadata.title }}</h1>
      <div style="display: flex; margin: 20px 0px">
        <nav>
            <a href="#about"><i class="fas fa-male" style="margin-right: 5px;"></i>About me</a>
            <a href="#experience"><i class="fas fa-briefcase" style="margin-right: 5px;"></i>Experience</a>
            <a href="#education"><i class="fas fa-graduation-cap" style="margin-right: 5px;"></i>Education</a>
            <a href="#publications"><i class="fas fa-file-alt" style="margin-right: 5px;"></i>Publications</a>
        </nav>
      </div>
    </header>
    <main>
      {{ content | safe }}
    </main>
    <footer>

    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
