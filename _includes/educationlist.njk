{% for education in educationList | reverse %}
  <div style="display: flex; margin: 20px; flex-wrap: wrap;
  justify-content: center;">
    <div>
      <figure style="width: 200px; flex: 0 1 200px; text-align: center;">
          <img src="{{ education.data.logo | url }}" alt="{{ education.data.organization }} logo" style="max-width: 200px; max-height: 100px;">
      </figure>
    </div>
    <div style="display: flex; flex-direction: column; flex: 1 1 200px;">
        <h2 style="margin-bottom: 10px; margin-top: 12px;">{{ education.data.title }}</h2>
        <small><i class="fas fa-university" style="width:13px; margin-right: 10px;"></i>{{ education.data.organization }}</small>
        <small><i class="far fa-calendar-alt" style="width:13px;margin-right: 10px;"></i> {{ education.data.start }} - {{ education.data.end }}</small>
        <small><i class="fas fa-map-marker-alt" style="width:13px;margin-right: 10px;"></i>{{ education.data.location }}</small>
        <div style="margin-top: 10px;">
          {{education.templateContent| safe}}
        </div>
      </div> 
  </div>
{% endfor %}